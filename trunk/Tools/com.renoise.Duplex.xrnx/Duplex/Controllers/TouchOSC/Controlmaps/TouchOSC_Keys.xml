
<Device>
	<Name>TouchOSC</Name>
	<Author>Danoise</Author>
	<Description>Controlmap for TouchOSC (simple layout)</Description>
	<Parameters>
		<Row>
			<Group name="Keyboard1">
				<Param value="/1/push* %i" type="keyboard" name="" size="1.1" aspect="1" range="12" maximum="1" minimum="0"/>
			</Group>
			<Group name="Keyboard2">
				<Param value="/2/push* %i" type="keyboard" name="" size="1.1" aspect="1" range="12" maximum="1" minimum="0"/>
			</Group>
			<Row>
				<Group name="Faders1">
					<Param value="/3/fader1 %f" type="fader" orientation="vertical" name="" size="4.25" maximum="1" minimum="0"/>
					<Param value="/3/fader2 %f" type="fader" orientation="vertical" name="" size="4.25" maximum="1" minimum="0"/>
				</Group>
				<Column>
					<Row>
						<Group name="Faders2">
							<Param value="/3/fader3 %f" type="fader" orientation="vertical" name="" size="3" maximum="1" minimum="0"/>
							<Param value="/3/fader4 %f" type="fader" orientation="vertical" name="" size="3" maximum="1" minimum="0"/>
							<Param value="/3/fader5 %f" type="fader" orientation="vertical" name="" size="3" maximum="1" minimum="0"/>
						</Group>
					</Row>
					<Row>
						<Group name="FaderToggles">
							<Param value="/3/toggle1 %i" type="togglebutton" name="" size="1" maximum="1" minimum="0"/>
							<Param value="/3/toggle2 %i" type="togglebutton" name="" size="1" maximum="1" minimum="0"/>
							<Param value="/3/toggle3 %i" type="togglebutton" name="" size="1" maximum="1" minimum="0"/>
						</Group>
					</Row>
				</Column>
				<Column>
					<Group name="Rotary">
						<Param value="/3/rotary1 %f" type="dial" name="" size="2" maximum="1" minimum="0"/>
					</Group>
					<Group name="PushButtons" columns="2">
						<Param value="/3/push3 %i" type="pushbutton" name="" size="1" maximum="1" minimum="0"/>
						<Param value="/3/push4 %i" type="pushbutton" name="" size="1" maximum="1" minimum="0"/>
						<Param value="/3/push1 %i" type="pushbutton" name="" size="1" maximum="1" minimum="0"/>
						<Param value="/3/push2 %i" type="pushbutton" name="" size="1" maximum="1" minimum="0"/>
					</Group>
				</Column>
			</Row>
			<Group name="Extra" >
				<Param value="/accxyz %f %f %f" type="fader" size="4.25" name="Accelerometer #1" orientation="vertical" skip_echo="true" maximum="1" minimum="0"/>
			</Group>
		</Row>
	</Parameters>
</Device>

