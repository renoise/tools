<!--
Akai LPD8 Setup for Renoise Duplex
Allows control of track mute, level and effect parameters
v1.0
by Per Abrahamsen (Per128 - www.per128.com)
Preset file for LPD8 Editor included
Note: The UI layout is not consistent with the hardware because the "columns" property is broken ATM.
Extract into "Duplex/Controllers/"
-->

<Device>
  <Name>AkaiLPD8</Name>
  <Author>Per128 (www.per128.com)</Author>
  <Description>Controlmap for Akai LPD8
Mixer = Mute, Levels, Effects = Page, Param values
Pad CCs: 110-117, Knob CCs: 21-28. Preset file for LPD8 Editor included</Description>
	<Parameters>
		<Column>
			<Row>
				<Group name="Pads" columns="4">
					<Param value="CC#110" type="togglebutton" name="PAD5"  maximum="127" minimum="0"/>
					<Param value="CC#111" type="togglebutton" name="PAD6"  maximum="127" minimum="0"/>
					<Param value="CC#112" type="togglebutton" name="PAD7"  maximum="127" minimum="0"/>
					<Param value="CC#113" type="togglebutton" name="PAD8"  maximum="127" minimum="0"/>
					<Param value="CC#114" type="togglebutton" name="PAD1"  maximum="127" minimum="0"/>
					<Param value="CC#115" type="togglebutton" name="PAD2"  maximum="127" minimum="0"/>
					<Param value="CC#116" type="togglebutton" name="PAD3"  maximum="127" minimum="0"/>
					<Param value="CC#117" type="togglebutton" name="PAD4"  maximum="127" minimum="0"/>
				</Group>
				<Group name="Knobs" columns="4">
					<Param value="CC#21" type="dial" name="K1"  maximum="127" minimum="0"/>
					<Param value="CC#22" type="dial" name="K2"  maximum="127" minimum="0"/>
					<Param value="CC#23" type="dial" name="K3"  maximum="127" minimum="0"/>
					<Param value="CC#24" type="dial" name="K4"  maximum="127" minimum="0"/>
					<Param value="CC#25" type="dial" name="K5"  maximum="127" minimum="0"/>
					<Param value="CC#26" type="dial" name="K6"  maximum="127" minimum="0"/>
					<Param value="CC#27" type="dial" name="K7"  maximum="127" minimum="0"/>
					<Param value="CC#28" type="dial" name="K8"  maximum="127" minimum="0"/>
				</Group>
			</Row>
		</Column>
	</Parameters>
</Device>
