  <Parameters>
	<Row>
		<Group name="MOD" >
			<Param value="PB|Ch1" type="fader" size="6" aspect="0.5" orientation="vertical" name="" maximum="127" minimum="0"/>
		</Group>
		<Group name="CP" >
			<Param value="CP|Ch1" type="fader" size="6" aspect="0.5" orientation="vertical" name="" maximum="127" minimum="0"/>
		</Group>
		<Group name="Keyboard" orientation="horizontal" >
			<Param value="|" type="keyboard" name="" size="0.77" range="48" maximum="127" minimum="0"/>
		</Group>
	</Row>
  </Parameters>
</Device>
